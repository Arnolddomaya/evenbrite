<!DOCTYPE html>
<html>
  <head>
    <title>EventbriteLike</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <ul>
      <% if logged_in? %>
        <li><h4><%= @current_user.name %><strong><%= link_to "[profile]", user_path(@current_user) %></strong><strong><%= link_to '[Creer un event]', new_event_path %></strong><strong><%= link_to "[Log out]", logout_path, method: :delete %></strong></h4></li>
      <% else %>
        <li><h4><strong><%= link_to "Log in", login_path %></strong></h4></li>
      <% end %>
    </ul>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    <%= yield %>

    </div>
  </body>
</html>
